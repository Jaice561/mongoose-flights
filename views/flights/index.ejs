                <th>FLight Number</th>
                <th>Departure Date</th>
                <th>Destinations</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(flight) { %>
                <tr>
                    <td><%= flight.airline %></td>
                    <td><%= flight.airport %></td>
                    <td><%= flight.flightNo %></td>
                    <td><%= flight.departs %></td>
                    <td><a href="flights/<%=flight.id%>">Details</a></td>â€©
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
